{
    "manifest_version": 3,
    "name": "Fact Checking System",
    "description": "This extension fact checks the current highlighted text.",
    "version": "1.0",
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Fact Check System"
    },
    "icons": {
        "16": "icon.png",
        "32" : "icon.png"
    },

    "permissions": [
        "storage", "activeTab", "scripting","contextMenus"
        ],
        "background": {
            "service_worker": "background.js"
          }

}